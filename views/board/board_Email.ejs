<% include ../include/header %>
    <div class="progress">
        <div id="navPersent" class="progress-bar bg-info" role="progressbar" aria-valuemin="0" aria-valuemax="100"
            style="width: 0%; ">0%</div>
    </div>
    <section>
        <div class="secondSectionHeader">
            <h1 id="info_Header" class="text-center">UIT - LAB</h1>
            <h5 id="info_smallHeader" class="text-center">Email 보내기</h5>
    </section>
    <section>
        <div class="font_info">
            <div class="col-2 mx-left btn-group-vertical left" style="width: 100%;">
                <a href="/notice/1" class="btn btn-outline-secondary" type="button"
                    style="border-right: none; border-left: none; border-top: none;; border-bottom: none; width: 100%;">Notice
                    Board</a>
                <a href="/free/1" class="btn btn-outline-secondary" type="button"
                    style="border-right: none; border-left: none; border-top: none;; border-bottom: none; width: 100%;">Free
                    Board</a>
                <a href="/qna/1" class="btn btn-outline-secondary" type="button"
                    style="border-right: none; border-left: none; border-top: none;; border-bottom: none; width: 100%;">QnA
                    Board</a>
                <a href="/email/1" class="btn btn-outline-secondary" type="button"
                    style="border-right: none; border-left: none; border-top: none;; border-bottom: none; width: 100%;">Email
                    Board</a>
            </div>
            <div class="right table-responsive mr-3">
                <table class="table table-hover">
                    <thead>
                        <tr class="tb_color">
                            <th class="th_color" scope="col"
                                style="width: 10%; text-align: center; border-left: none; border-right: none;">번호</th>
                            <th class="th_color" scope="col"
                                style="width: 50%; text-align: center; border-left: none; border-right: none;">제목</th>
                            <th class="th_color" scope="col"
                                style="width: 20%; text-align: center; border-left: none; border-right: none;">작성자</th>
                            <th class="th_color" scope="col"
                                style="text-align: center; border-left: none; border-right: none;">등록일</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=(page*page_num)-page_num;i<(page*page_num);i++){
                            if(i>length){
                                i++;
                            }
                            else{
                                var data = rows[i];
                            %>
                            <tr>
                                <td style="text-align: center; border-left: 2px solid #ffffff; border-right: none;">
                                    <%= data.uid%>
                                </td>
                                <td style="text-align: center; border-left: none; border-right: none;">
                                    <%= data.title%>
                                </td>
                                <td style="text-align: center; border-left: none; border-right: none;">
                                    <%= data.name%>
                                </td>
                                <td style="text-align: center; border-left: none; border-right: 2px solid #ffffff;">
                                    <%= data.regdate%>
                                </td>
                            </tr>
                            <%} }%>
                    </tbody>
                </table>

                <div class="mx-auto" style="text-align: right;"><a href="/email/write" type="button" class="btn btn-outline-secondary">작성하기</a></div>
                <br>
                <div class="mx-auto" style="text-align: center;">
                    <div class="btn-group">
                        <% for(var j=0;j<rows.length/page_num;j++){%>
                            <a type="button" class="btn btn-outline-secondary" href="/email/<%= j+1%>"><%=j+1%></a>
                            <%}%>
                    </div>
                    <br>
                    <br>
                </div>
            </div>
        </div>
    </section>
    <script>
        $('#info_Header').css("opacity", "0");
        $('#info_smallHeader').css("opacity", "0");
        $('#info_content').css("opacity", "0");
        $(document).ready(function () {
            $('#info_Header').animate({ opacity: "1" }, 350, function () {
                $('#info_smallHeader').animate({ opacity: "1" }, 350, function () {
                    $('#info_content').animate({ opacity: "1" }, 350);
                });
            });
        })
    </script>
  <% include ../include/footer %>