<% include ../include/header %>
    <section>
        <div class="secondSectionHeader">
            <h1 id="info_Header" class="text-center">UIT - LAB</h1>
            <h5 id="info_smallHeader" class="text-center">자유 게시판</h5>
        </div>
        <div class="info_content">
            <div class="row">
                <div class="col-2 mx-left btn-group-vertical container w-100 d-block">
                    <a href="/notice/1" class="btn btn-outline-secondary" type="button"
                        style="border-right: none; border-left: none; border-top: none;; border-bottom: none;">Notice
                        Board</a>
                    <a href="/free/1" class="btn btn-outline-secondary" type="button"
                        style="border-right: none; border-left: none; border-top: none;; border-bottom: none;">Free
                        Board</a>
                    <a href="/qna/1" class="btn btn-outline-secondary" type="button"
                        style="border-right: none; border-left: none; border-top: none;; border-bottom: none;">QnA
                        Board</a>
                    <a href="/email/1" class="btn btn-outline-secondary" type="button"
                        style="border-right: none; border-left: none; border-top: none;; border-bottom: none;">Email
                        Board</a>
                </div>
                <div class="col-9 table-responsive mr-3">
                    <table class="table table-hover">
                        <thead>
                            <tr class="tb_color">
                                <th class="th_color" scope="col"
                                    style="width: 10%; text-align: center; border-left: none; border-right: none;">번호
                                </th>
                                <th class="th_color" scope="col"
                                    style="width: 50%; text-align: center; border-left: none; border-right: none;">제목
                                </th>
                                <th class="th_color" scope="col"
                                    style="width: 20%; text-align: center; border-left: none; border-right: none;">작성자
                                </th>
                                <th class="th_color" scope="col"
                                    style="text-align: center; border-left: none; border-right: none;">등록일</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=(page*page_num)-page_num;i<(page*page_num);i++){ if(i>length){
                                i++;
                                }
                                else{
                                var data = rows[i];
                                %>
                                <tr>
                                    <td style="text-align: center; border-left: 2px solid #ffffff; border-right: none;">
                                        <%= data.uid%>
                                    </td>
                                    <td style="text-align: center; border-left: none; border-right: none;">
                                        <%= data.title%>
                                    </td>
                                    <td style="text-align: center; border-left: none; border-right: none;">
                                        <%= data.name%>
                                    </td>
                                    <td style="text-align: center; border-left: none; border-right: 2px solid #ffffff;">
                                        <%= data.regdate%>
                                    </td>
                                </tr>
                                <%} }%>
                        </tbody>
                    </table>
                    <% if(user_id != undefined){%>
                    <div class="mx-auto" style="text-align: right;"><a href="/free/write" type="button"
                            class="btn btn-outline-secondary">작성하기</a></div>
                    <br>
                    <%}%>
                    <div class="mx-auto" style="text-align: center;">
                        <div class="btn-group">
                            <% if((rows.length/page_num)>=1){%>
                            <% for(var j=0;j<rows.length/page_num;j++){%>
                                <a type="button" class="btn btn-outline-secondary" href="/free/<%= j+1%>">
                                    <%=j+1%>
                                </a>
                                <%}}%>
                        </div>
                        <br>
                        <br>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        $('#info_Header').css("opacity", "0");
        $('#info_smallHeader').css("opacity", "0");
        $('#info_content').css("opacity", "0");
        $(document).ready(function () {
            $('#info_Header').animate({ opacity: "1" }, 350, function () {
                $('#info_smallHeader').animate({ opacity: "1" }, 350, function () {
                    $('#info_content').animate({ opacity: "1" }, 350);
                });
            });
        })
    </script>
    <% include ../include/footer %>